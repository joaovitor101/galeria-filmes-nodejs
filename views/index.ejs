<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <style>
            body {
                font-family: 'Poppins', sans-serif;
                margin: 0;
                padding: 0;
                background-color: #1e1e2f;
                color: #c7c7d9;
            }
        
            .container {
                max-width: 1300px;
                margin-top: 60px;
                padding: 30px;
                border-radius: 15px;
                background-color: #2b2b3d;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            }
        
            .header {
                padding-bottom: 20px;
                margin-bottom: 30px;
                text-align: center;
            }
        
            .header h1 {
                font-size: 36px;
                font-weight: 600;
                color: #ffffff;
            }
        
            .form-label {
                font-weight: 500;
                font-size: 16px;
                color: #c7c7d9;
                position: absolute;
                top: 15px;
                left: 15px;
                pointer-events: none;
                transition: all 0.3s ease;
            }
        
            .form-control {
                border: none;
                padding: 20px 15px;
                font-size: 16px;
                background-color: #3c3c50;
                transition: box-shadow 0.3s ease, padding 0.3s ease;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                border-radius: 10px;
                width: 100%;
                margin-top: 25px;
                color: #ffffff;
            }
        
            .form-control:focus {
                box-shadow: 0 0 8px rgba(88, 180, 255, 0.7);
                padding-top: 30px;
            }
        
            .form-control:focus + .form-label,
            .form-control:not(:placeholder-shown) + .form-label {
                top: -10px;
                left: 10px;
                font-size: 12px;
                color: #58b4ff;
            }
        
            .btn {
                border-radius: 10px;
                padding: 15px;
                font-size: 16px;
                background-color: #58b4ff;
                color: #ffffff;
                border: none;
                width: 100%;
                margin-top: 20px;
                transition: background-color 0.3s ease;
            }
        
            .btn:hover {
                background-color: #4095cc;
            }
        
            .catalogo-filmes {
                display: grid;
                grid-template-columns: repeat(3, 1fr);
                gap: 20px;
                margin-top: 30px;
            }
        
            .filme-card {
                background-color: #3c3c50;
                border-radius: 15px;
                padding: 15px;
                box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
                text-align: center;
                transition: transform 0.3s ease;
                color: #ffffff;
            }
        
            .filme-card:hover {
                transform: translateY(-5px);
            }
        
            .filme-card img {
                width: 100%;
                border-radius: 15px;
                transition: transform 0.3s ease;
            }
        
            .filme-card img:hover {
                transform: scale(1.05);
            }
        
            .filme-card h4 {
                margin-top: 15px;
                font-size: 20px;
                font-weight: 600;
                color: #ffffff;
            }
        
            .filme-card p {
                margin-top: 10px;
                font-size: 16px;
                color: #c7c7d9;
            }
        
            .image-preview-container {
                display: none;
                margin-top: 10px;
            }
        
            #imagePreview {
                width: 40%;
                border-radius: 15px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
            }

            .form-group input[type="file"] {
        display: none; /* Esconde o botão padrão */
    }

    .custom-file-upload {
        display: inline-block;
        padding: 15px 20px;
        font-size: 16px;
        background-color: #9cabb6; /* Fundo azul */
        color: #fff; /* Texto branco */
        border: none;
        border-radius: 10px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.3s ease;
        width: 100%; /* Faz o botão ocupar toda a largura */
    }

    .custom-file-upload:hover {
        background-color: #1d6e92; /* Fundo mais escuro no hover */
    }

    .custom-file-upload:active {
        background-color: #15567a; /* Fundo ainda mais escuro ao clicar */
    }
        </style>
        
    <title>Filmes</title>
</head>

<body>
    <div class="container">
        <!-- Card de Cadastro -->
        <div class="content">
            <div class="header">
                <h1>Cadastro de Filmes</h1>
            </div>
            <div class="card-body">
                <form action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group position-relative">
                        <input type="text" id="titulo" name="titulo" class="form-control" placeholder=" " required>
                        <label for="titulo" class="form-label">Título:</label>
                    </div>

                    <div class="form-group position-relative">
                        <input type="date" id="ano" name="ano" class="form-control" placeholder=" " required>
                        <label for="ano" class="form-label">Ano de Criação:</label>
                    </div>

                    <div class="form-group position-relative">
                        <select id="classificacao" name="classificacao" class="form-control" required>
                            <option value="" disabled selected>Selecione a Classificação</option>
                            <option value="L">L (Livre)</option>
                            <option value="10">10</option>
                            <option value="12">12</option>
                            <option value="14">14</option>
                            <option value="16">16</option>
                            <option value="18">18</option>
                            <option value="+18">+18</option>
                        </select>
                        <label for="classificacao" class="form-label">Classificação Etária:</label>
                    </div>

                    <div class="form-group position-relative mt-3">
                        <label for="file" class="custom-file-upload">Escolher Cartaz</label>
                        <input type="file" id="file" name="file" required accept="image/*" onchange="previewImage(event)">
                    </div>
                    

                    <div class="image-preview-container" id="imagePreviewContainer">
                        <img id="imagePreview" class="image-preview" src="#" alt="Imagem do Cartaz">
                    </div>

                    <button type="submit" class="btn">Enviar</button>
                </form>
            </div>
        </div>

        <!-- Card de Catálogo de Filmes -->
        <div class="content mt-4">
            <div class="header">
                <h1>Catálogo de Filmes</h1>
            </div>
            <div class="catalogo-filmes">
                <!-- Exemplo de card de filme -->
                <% filmes.forEach((filme, index) => { %>
                <div class="filme-card">
                    <img src="uploads/<%= filme.file %>" alt="<%= filme.titulo %>">
                    <h4><%= filme.titulo %></h4>
                    <p><strong>Classificação:</strong> <%= filme.classificacao %></p>
                    <p><strong>Ano:</strong> <%= new Date(filme.ano).getFullYear() %></p> <!-- Exibindo apenas o ano -->
                </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        // Função para mostrar a pré-visualização da imagem
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function() {
                const imagePreview = document.getElementById('imagePreview');
                const previewContainer = document.getElementById('imagePreviewContainer');
                
                imagePreview.src = reader.result;
                previewContainer.style.display = 'block'; // Exibe a imagem
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
</body>

</html>
